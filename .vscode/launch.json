	"version": "0.2.0",
	"configurations": [
		{
			"command": "yarn clean-start",
			"name": "Clean start",
			"request": "launch",
			"type": "node-terminal"
		},
		{
			"command": "yarn clean-start-inspect",
			"name": "Clean start inspect",
			"request": "launch",
			"type": "node-terminal"
		},
		{
			"type": "pwa-node",
			"request": "launch",
			"name": "Run API",
			"skipFiles": [
				"<node_internals>/**"
			],
			"program": "${workspaceFolder}/dist/index.js",
			"outFiles": [
				"${workspaceFolder}/**/*.js"
			],
			"preLaunchTask": "yarn: clean-build",
		}
	]
}